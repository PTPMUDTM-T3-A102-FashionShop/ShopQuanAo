﻿@model WebsiteBanQuanAo.Models.SanPham
@{
    ViewBag.Title = "Chi Tiết";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@section slmua{
    <span id="cartItemCount">@ViewBag.SLSP</span>
}
<div class="container mt-5">
    <div style="height:100px">

    </div>
    <div class="card">
        <div class="row g-0">
            <div class="col-md-6">
                <div class="d-flex flex-column justify-content-center">
                    <div class="main-image">
                        <img src="~/img/@Model.HinhAnhUrl" id="main_product_image" class="img-fluid" alt="Product Image">
                    </div>
                    <div class="thumbnail-images mt-3">
                        <ul id="thumbnail" class="list-inline">
                            @{
                                if (Model.HinhAnhUrl != null)
                                {
                                    string[] dsHinh = Model.HinhAnhUrl.Trim().Split(',');
                                    foreach (var item in dsHinh)
                                    {
                                        <li class="list-inline-item">
                                            <img onclick="changeImage(this)" src="~/img/@item.ToString().Trim()" class="img-thumbnail" width="100">
                                        </li>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted">Không có hình ảnh.</p>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="p-3 d-flex flex-column justify-content-between">
                    <br />
                    <br />
                    <br />
                    <br />
                    <h3> Tên sản phẩm: @Html.DisplayFor(mode => Model.TenSanPham)</h3>
                    <div class="ratings d-flex flex-row align-items-center">
                        <div class="d-flex flex-row">
                            <i class='bx bxs-star'></i> <i class='bx bxs-star'></i> <i class='bx bxs-star'></i> <i class='bx bxs-star'></i> <i class='bx bx-star'></i>
                        </div>
                    </div>
                    <div class="mt-2 content">
                        <p>Mô Tả:@Html.DisplayFor(mode => Model.MoTa)</p>
                    </div>
                    <h3 class="mt-3">Giá: @Html.DisplayFor(mode => Model.Gia)</h3>
                    <div class="buttons d-flex flex-row mt-4 gap-3">
                        <a href="/Cart/Details/@Model.SanPhamID"><button type="submit" class="btn btn-outline-dark">Mua Ngay</button></a>
                        <a href="@Url.Action("Add", "Cart", new { id = @Model.SanPhamID })"><button type="submit" class="btn btn-dark">Thêm Giỏ Hàng</button></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a href="/product" class="btn btn-outline-primary mt-3">
        <i class="fas fa-arrow-left"></i>
        <span class="ms-2">Quay lại danh sách sản phẩm</span>
    </a>
</div>

<script>
    function changeImage(element) {
        var main_prodcut_image = document.getElementById('main_product_image');
        main_prodcut_image.src = element.src;
    }
</script>