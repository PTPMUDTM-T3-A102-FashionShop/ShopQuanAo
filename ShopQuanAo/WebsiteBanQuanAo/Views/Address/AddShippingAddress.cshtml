@model WebsiteBanQuanAo.Models.ThongTinGiaoHang

@{
    ViewBag.Title = "Thêm Địa Chỉ";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<div style="height:100px"></div>
<div class="container mt-5">
    <h2 class="text-center">@ViewBag.Title</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <div class="form-container">
            <div class="form-group">
                @Html.Label("TenNguoiNhan", "Tên người nhận", new { @class = "form-label" })
                @Html.TextBoxFor(m => m.TenNguoiNhan, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.Label("SoDienThoai", "Số điện thoại", new { @class = "form-label" })
                @Html.TextBoxFor(m => m.SoDienThoai, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.Label("DiaChiGiaoHang", "Địa chỉ giao hàng", new { @class = "form-label" })
                @Html.TextAreaFor(m => m.DiaChiGiaoHang, new { @class = "form-control", rows = 3 })
            </div>

            <div class="form-group form-check">
                @Html.CheckBoxFor(m => m.DiaChiMacDinh, new { @class = "form-check-input" })
                @Html.LabelFor(m => m.DiaChiMacDinh, new { @class = "form-check-label" })
            </div>

            <div class="form-group text-center mt-3">
                <button type="submit" class="btn btn-primary">Lưu</button>
                <a href="@Url.Action("Index", "Address")" class="btn btn-secondary ml-2">Hủy</a>
            </div>
        </div>
    }
</div>

<style>
    .form-container {
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        max-width: 500px;
        width: 100%;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .form-check-label {
        font-size: 16px;
    }

    .form-label {
        font-weight: bold;
        font-size: 16px;
    }

    h2 {
        margin-bottom: 20px;
    }

    /* To make sure Vietnamese fonts display correctly */
    body {
        font-family: 'Arial', sans-serif, 'Helvetica', 'Roboto', sans-serif;
    }
</style>
