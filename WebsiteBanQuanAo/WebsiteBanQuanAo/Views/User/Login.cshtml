@model WebsiteBanQuanAo.Models.NguoiDung
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@section css {
    <style>
        body {
            padding-top: 100px; /* Giảm padding trên cùng để form gần hơn với header */
        }

        .form-login {
            max-width: 500px; /* Thu nhỏ chiều rộng form để hợp lý với nội dung */
            margin: 0 auto;
            padding: 20px; /* Giảm padding để không gian trong form gọn gàng hơn */
            border-radius: 10px;
            background-color: #ffffff;
            border: 1px solid #ddd; /* Tạo viền xám nhạt để form có độ rõ ràng */
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1); /* Giảm shadow để không quá nổi bật */
        }

            .form-login h2 {
                padding: 0;
                text-align: center;
                margin-bottom: 15px; /* Giảm khoảng cách dưới tiêu đề */
                color: #333;
            }

        .form-control {
            border-radius: 5px;
            border: 1px solid #ced4da;
            margin-bottom: 15px; /* Thêm khoảng cách giữa các ô input */
            padding: 10px; /* Tăng padding để input dễ nhập hơn */
        }

            .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
            }

        .btn-primary {
            width: 100%;
            padding: 12px;
            background-color: #28a745; /* Sử dụng màu xanh lá cây nhạt hơn */
            border: none;
            border-radius: 5px;
            color: #fff;
            font-weight: bold;
            transition: background-color 0.3s;
        }

            .btn-primary:hover {
                background-color: #218838; /* Màu đậm hơn khi hover */
            }

        .text-muted {
            text-align: center;
            margin-top: 15px;
        }

            .text-muted a {
                color: #007bff;
            }

        .form-group {
            padding: 5px;
        }
    </style>
}
<div style="height:100px"></div>

<div class="form-login">
    <h2>Đăng Nhập Tài Khoản</h2> 
    @using (Html.BeginForm("Login", "User", FormMethod.Post))
    {
        <div class="form-group">
            @Html.TextBoxFor(model => model.TenDangNhap, new { @class = "form-control", placeholder = "Nhập tên đăng nhập" })
        </div>

        <div class="form-group">
            @Html.TextBoxFor(model => model.MatKhau, new { @class = "form-control", type = "password", placeholder = "Nhập mật khẩu" })
        </div>

        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary">Đăng Nhập</button>
        </div>

        <div class="text-muted">
            <p>Bạn chưa có tài khoản? <a href="@Url.Action("Register", "User")">Đăng Ký</a></p>
        </div>
    }
</div>

